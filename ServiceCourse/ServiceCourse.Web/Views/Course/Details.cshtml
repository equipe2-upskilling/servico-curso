@model ServiceCourse.Web.Models.CourseViewModel

@{
    ViewBag.Title = "Details";
}

<a href="@Url.Action("Index", "Lesson")" class="btn btn-primary btn-sm" style="float: right; display: flex; margin-top: 10px">
    Aulas
</a>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            Professor
        </dt>

        <dd>
            @if (Model.TeacherName is null)
            {
                <p>Nenhum professor cadastrado</p>
            }
            else
            {
                @Html.DisplayFor(model => model.TeacherName)

            }
        </dd>
        <dt>
            Duração
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duration) meses
        </dd>

        <dt>
            Preço
        </dt>

        <dd>
            R$@Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            Imagem de capa
        </dt>
        <dd>
            @if (Model.CoverImg is null)
            {
                <p>Nenhuma imagem cadastrada</p>
            }
            else
            {
                <div class="col-sm-6">
                    <img id="imgPreview" src="@Html.DisplayFor(model => model.CoverImg)" alt="Pré-visualização da Imagem" class="img-fluid" style="max-height: 200px; max-width: 200px;" />
                </div>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.CourseId }) |
    @Html.ActionLink("Voltar", "Index")
</p>
